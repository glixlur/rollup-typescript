{
  "name": "@alexlur/rollup-plugin-typescript",
  "version": "1.0.2",
  "description": "Seamless integration between Rollup and TypeScript.",
  "main": "dist/rollup-plugin-typescript.cjs.js",
  "module": "dist/rollup-plugin-typescript.es.js",
  "jsnext:main": "dist/rollup-plugin-typescript.es.js",
  "types": "types.d.ts",
  "files": [
    "dist",
    "src",
    "types.d.ts"
  ],
  "keywords": [
    "rollup-plugin",
    "typescript",
    "es2015"
  ],
  "license": "MIT",
  "homepage": "https://github.com/alexlur/rollup-plugin-typescript",
  "author": "@alexlur",
  "scripts": {
    "prebuild": "rimraf dist/*",
    "build": "rollup -c",
    "lint": "tslint -c ./tslint.json src/*.ts",
    "pretest": "npm run build",
    "test": "mv tsconfig.json _tsconfig.json; mocha --compilers js:buble/register; mv _tsconfig.json tsconfig.json",
    "posttest": "npm run lint",
    "prepublish": "npm run test"
  },
  "dependencies": {
    "rollup-pluginutils": "^1.5.2",
    "tslib": "^1.2.0"
  },
  "peerDependencies": {
    "typescript": "^2.0"
  },
  "devDependencies": {
    "@alexlur/rollup-plugin-typescript": "^0.8.1",
    "@types/node": "^6.0.53",
    "buble": "^0.15.1",
    "eslint": "^3.12.2",
    "mocha": "^3.2.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.37.0",
    "rollup-plugin-buble": "^0.15.0",
    "ts-node": "^1.7.2",
    "tslib": "^1.2.0",
    "tslint": "^4.1.1",
    "typescript": "^2.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexlur/rollup-plugin-typescript.git"
  },
  "bugs": {
    "url": "https://github.com/alexlur/rollup-plugin-typescript/issues"
  }
}
